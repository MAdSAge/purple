				try {
					TestImage frame = new TestImage();
					Dimension screenSize = Toolkit.getDefaultToolkit().getScreenSize();
				    frame.setSize(screenSize.width, screenSize.height);
					frame.setVisible(true);
					
					URL url;
				
					
					ImagePC sage = new ImagePC();
					BufferedImage hox = sage.getResizedImage(url,1100,1880);
					frame.imagelab.setIcon(new ImageIcon(hox));					
							
				} catch (Exception e) {
					e.printStackTrace();
				}
			}
		});
	}
	
